{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017","es6","es5","dom"],
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "index.ts"
  ]

}